# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Security Configuration
JWT_ACCESS_SECRET=your_jwt_access_secret_here_min_32_chars
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here_min_32_chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
ENCRYPTION_KEY=your_encryption_key_here_min_32_chars
ORACLE_PRIVATE_KEY_ENCRYPTED=encrypted_private_key_here
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Database Configuration
USE_MONGODB=false
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=agora_oracle

# Blockchain Configuration
ETHEREUM_RPC_URL=http://localhost:8545
MAIN_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890

# AI Service Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_FALLBACK_TO_MOCK=true

# Monitoring Configuration
MONITORING_INTERVAL=60000